{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      { "source": "**/*.@(js|css|wasm|png|jpg|jpeg|gif|svg)", "headers": [{ "key": "Cache-Control", "value": "public,max-age=31536000,immutable" }] }
    ],
    "rewrites": [{ "source": "**", "destination": "/index.html" }]
  }
}
